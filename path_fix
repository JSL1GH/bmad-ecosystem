#!/usr/bin/perl
#-*-perl-*-
#
# this script changes any instances of /disk1/blah or /a/cesr38/cdat/cesr38/disk1/blah in the include file paths to /cdat/cesr38/disk1/blah


foreach $file (@ARGV)
{
  $cesrplatf=`printenv |grep CESR_PLATFORM|cut -d= -f2`;
  chomp $cesrplatf;
  $cesrlib= `printenv |grep CESR_REL`;
  chomp $cesrlib;
  $cesrlib=~s/.*$cesrplatf\///g;
#  print "$cesrlib,\n";
	$file=~s/^-f//;
	$host=`hostname | cut -d. -f1`;
	chomp $host;
	open (F_in, $file) or die("Cannot open file $file\n");
	open (F_out, ">temp.out");
	while(<F_in>)
	 {
		s/ \/disk(.+?)\// \/cdat\/$host\/disk$1\//g;
		s/ \/a\/(.+?)\// \//g;
    s/^\s*\.\.\/include/\$\(CESR_INC\)/g;
    s/\/\S*\/$cesrlib\/cvssrc\/include/\$\(CESR_INC\)/g;
    s/\/\S*\/$cesrlib\/modules/\$\(CESR_MOD\)/g;
    s/\/\S*\/$cesrlib\/packages/\$\(CESR_PKG\)/g;
		print (F_out);
   }
	close(F_in);
	close(F_out);
	rename "temp.out", $file;
 }









