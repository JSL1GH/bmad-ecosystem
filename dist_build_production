#!/bin/bash

# Order here matters.
DIRLIST="xsif PGPLOT lapack gsl fgsl forest recipes_f-90_LEPP sim_utils bmad tao cpp_bmad_interface examples activemq-cpp-3.7.0 cesr_utils bmadz bsim"

for DIR in ${DIRLIST}
do
  cd ${DIST_BASE_DIR}/${DIR};
  echo -e "\nBuilding directory: ${DIR}\n"
  mk ${1}
  if ( [ ${?} != 0 ] ) then
    echo -e "\nError in distribution build.\n"
    exit 1
  fi
done

cd ${DIST_BASE_DIR}

